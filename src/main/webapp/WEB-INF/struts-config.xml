<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
	<form-beans>
		<form-bean name="DispatchActionForm" type="com.epam.yalexeyenko.form.UserForm" />
	</form-beans>

	<action-mappings>
		<action path="/user" type="com.epam.yalexeyenko.action.UserAction"
			parameter="parameter" input="/index.jsp" name="DispatchActionForm"
			scope="request" validate="false">
			<forward name="add" path="/WEB-INF/adduser.jsp" />
			<forward name="edit" path="/WEB-INF/edituser.jsp" />
			<forward name="search" path="/WEB-INF/searchuser.jsp" />
			<forward name="save" path="/WEB-INF/saveuser.jsp" />
		</action>
	</action-mappings>

</struts-config>