<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.epam.yalexeyenko.model.News" table="NEWSBLOCK">
		<id name="id" type="java.lang.Integer">
			<column name="ID" />
			<generator class="identity" />
		</id>
		<property name="newsTitle" type="java.lang.String">
			<column name="TITLE" length="2000" not-null="true" />
		</property>
		<property name="date" type="java.util.Date">
			<column name="NEWSDATE" not-null="true" />
		</property>
		<property name="brief" type="java.lang.String">
			<column name="BRIEF" length="2000" not-null="true" />
		</property>
		<property name="content" type="java.lang.String">
			<column name="NEWSCONTENT" length="2000" not-null="true" />
		</property>
	</class>	
</hibernate-mapping>